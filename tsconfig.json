{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "allowArbitraryExtensions": true
  },
  "include": [
    "./components/**/*.mdx",
    "./components/**/*",
    "./helpers/**/*",
    "./panda/**/*",
    "./shared/**/*",
    "./.storybook/**/*"
  ]
}
