{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowArbitraryExtensions": true
  },
  "include": [
    "./components/**/*.mdx",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./panda/**/*.mdx",
    "./panda/**/*.ts",
    "./panda/**/*.tsx",
    "./shared/**/*.mdx",
    "./shared/**/*.ts",
    "./shared/**/*.tsx"
  ]
}
