{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "paths": {
      "@styled-system/*": ["../styled-system/*"],
      "@environment/*": ["../environment/*"],
      "@config": ["../ui.config.js"]
    }
  },
  "include": ["./src/**/*"]
}
